datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id     Int     @id @default(autoincrement())
  userId String  @unique
  email  String  @unique
  name   String?
  PDF    PDF[]
}

model PDF {
  id         Int      @id @default(autoincrement())
  user       User     @relation(fields: [userId], references: [userId])
  userId     String
  name       String
  path       String
  uploadedAt DateTime @default(now())
  pageCount  Int
  metadata   Json
}
